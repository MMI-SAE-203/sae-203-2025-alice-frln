---
import Layout from '../../layouts/LayoutWithHero.astro';
import Card from '../../components/InviteCard.astro';
import { getInvites } from '../../../backend/backend.mjs';
import imgHero from '../../assets/img/hero_invites.webp';

const invites = await getInvites();
console.log(invites);

const title = "Festival de Cinéma";
const subTitle = "Découvrez nos invités et nos animateurs";
const subTitle2 = "Édition 2025";
---

<Layout title={title} subTitle2={subTitle2} subTitle={subTitle} src={imgHero} alt="Violoncelliste" classContent="">
    <Fragment slot="content">
        <div class="viewMode === 'grid' ? 'grid grid-cols-1 lg:grid-cols-3 gap-4' : 'flex flex-col'"
    >
      {invites && invites.map((invite) => <Card {...invite} />)}
    </div>
    </Fragment>
  </Layout>