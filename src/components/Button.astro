---
export interface Props {
  variant?: 'default' | 'primary' | 'outlined' | 'dark' | 'white';
  size?: 'small' | 'medium' | 'large';
  url?: string;
  text?: string;
  fullWidth?: boolean;
}

const {
  variant = 'default',
  size = 'medium',
  url = '#',
  text = '',
  fullWidth = false,
} = Astro.props;

const variantClass = {
  default: 'bg-pink-50 border-2 border-pink-200 text-black hover:bg-pink-100',
  primary: 'bg-indigo-600 border-2 border-indigo-600 text-white hover:bg-indigo-700',
  outlined: 'bg-transparent border-2 border-white text-white hover:bg-white/10',
  dark: 'bg-gray-800 border-2 border-gray-800 text-white hover:bg-gray-700',
  white: 'bg-white border-2 border-white text-gray-900 hover:bg-gray-100',
};

const sizeClass = {
  small: 'px-4 py-2 text-sm',
  medium: 'px-6 py-3 text-base',
  large: 'px-8 py-4 text-lg',
};

const widthClass = fullWidth ? 'w-full justify-center' : '';
---

<a
  href={url}
  class={`inline-flex items-center gap-2 font-semibold rounded-lg transition duration-300 ease-in-out ${variantClass[variant]} ${sizeClass[size]} ${widthClass}`}
>
  <slot/>
  {text}
</a>