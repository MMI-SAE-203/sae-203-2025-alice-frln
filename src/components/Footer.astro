---
import { Image } from 'astro:assets';
import LogoFooter from '../assets/img/logo_titre_et_texte.webp';
import IconFacebook from '../assets/icon-vectors/icon_facebook.svg';
import IconX from '../assets/icon-vectors/icon_x.svg';
import IconTiktok from '../assets/icon-vectors/vector_tiktok.svg';
import IconInstagram from '../assets/icon-vectors/icon_instagram.svg';
import IconYoutube from '../assets/icon-vectors/icon_youtbe.svg';
---

<footer class="bg-(--color-pink) text-black py-12 px-8 flex flex-col items-center text-center space-y-8 lg:space-y-0 lg:flex-row lg:justify-between lg:px-16 xl:px-24">
    <div class="max-w-7xl mx-auto w-full flex flex-col lg:flex-row items-center lg:items-start lg:justify-between space-y-8 lg:space-y-0">
        <!-- Logo -->
        <div class="lg:flex-1 lg:text-left">
            <Image src={LogoFooter} alt="Les Cinés-Echos" class="w-32 lg:w-40 mx-auto lg:mx-0" />
        </div>

        <!-- Contact -->
        <div class="lg:flex-1 lg:px-6">
            <h3 class="font-bold text-lg">Contact</h3>
            <address class="not-italic text-sm space-y-1">
                <p>123 Rue du Cinéma, Héricourt, France</p>
                <p><a href="mailto:info@lescinesechos.com" class="underline">info@lescinesechos.com</a></p>
                <p>Téléphone : +33 1 23 45 67 89</p>
            </address>
        </div>

        <!-- Réseaux sociaux -->
        <div class="lg:flex-1 lg:px-6 lg:text-right">
            <h3 class="font-bold text-lg">Réseaux sociaux</h3>
            <ul class="flex justify-center lg:justify-end space-x-4 mt-2">
                <li><a href="/" aria-label="facebook"><IconFacebook class="w-7 h-7" /></a></li>
                <li><a href="/" aria-label="x"><IconX class="w-7 h-7" /></a></li>
                <li><a href="/" aria-label="tiktok"><IconTiktok class="w-7 h-7" /></a></li>
                <li><a href="/" aria-label="instagram"><IconInstagram class="w-7 h-7" /></a></li>
                <li><a href="/" aria-label="youtube"><IconYoutube class="w-7 h-7" /></a></li>
            </ul>
        </div>
    </div>
</footer>
